<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/selectable_item_background"
    android:id="@+id/clRoot"
    tools:context=".PlayGameFragment">


    <TextView
        android:id="@+id/tvThreeToStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_fiolet"
        android:gravity="center"
        android:textSize="50sp"
        android:textStyle="bold"
        android:fontFamily="@font/archivo_black"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTimer"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="4dp"
        android:fontFamily="@font/archivo_black"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:background="@drawable/back_record_long"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/back_green"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone"
        android:fontFamily="@font/archivo_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvNewRecord"
        android:layout_width="0dp"
        android:textSize="30sp"
        android:text="New Record"
        android:gravity="center"
        android:padding="4dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:fontFamily="@font/archivo_black"
        android:textColor="@android:color/holo_red_light"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>