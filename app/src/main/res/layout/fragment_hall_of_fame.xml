<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HallOfFameFragment"
    android:background="@android:color/holo_green_light">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSprinRecord"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/back_record_sprint"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvRecordAllSpint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Records of Sprint"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvRecordSprint1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Sprint1"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@id/tvRecordAllSpint"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/tvRecordAllSpint"
            app:layout_constraintTop_toBottomOf="@+id/tvRecordAllSpint" />

        <TextView
            android:id="@+id/tvRecordSprint2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Sprint2"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/tvRecordSprint1"
            app:layout_constraintStart_toStartOf="@+id/tvRecordSprint1"
            app:layout_constraintTop_toBottomOf="@+id/tvRecordSprint1" />

        <TextView
            android:id="@+id/tvRecordSprint3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Sprint3"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRecordSprint2" />

        <TextView
            android:id="@+id/tvRecordSprint4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Sprint4"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/tvRecordSprint3"
            app:layout_constraintStart_toStartOf="@+id/tvRecordSprint3"
            app:layout_constraintTop_toBottomOf="@+id/tvRecordSprint3" />

        <TextView
            android:id="@+id/tvRecordSprint5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Sprint5"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/tvRecordSprint4"
            app:layout_constraintStart_toStartOf="@+id/tvRecordSprint4"
            app:layout_constraintTop_toBottomOf="@+id/tvRecordSprint4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMiddleRecord"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"

        android:layout_marginTop="176dp"
        android:background="@drawable/back_record_middle"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="@+id/clSprinRecord"
        app:layout_constraintTop_toTopOf="@+id/clSprinRecord">


        <TextView
            android:id="@+id/tvRecordAllMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:padding="4dp"
            android:text="Records of Middle"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRecordMiddle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Middle1"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRecordAllMiddle" />

        <TextView
            android:id="@+id/tvRecordMiddle2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Middle2"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRecordMiddle1" />

        <TextView
            android:id="@+id/tvRecordMiddle3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Middle3"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRecordMiddle2" />

        <TextView
            android:id="@+id/tvRecordMiddle4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Middle4"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRecordMiddle3" />

        <TextView
            android:id="@+id/tvRecordMiddle5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Middle5"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRecordMiddle4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clLongRecord"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="172dp"
        android:background="@drawable/back_record_long"

        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/clMiddleRecord">


        <TextView
            android:id="@+id/tvRecordAllLong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            android:text="Records of Sprint"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRecordLong1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Long1"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRecordAllLong" />

        <TextView
            android:id="@+id/tvRecordLong2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
